<!-- Base Template (layout.hbs) -->
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #2C3E50;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background-color: #2C5234;
            color: #D6C6B0;
            padding: 20px;
            text-align: center;
        }
        .content {
            background-color: #ffffff;
            padding: 20px;
        }
        .footer {
            background-color: #34495E;
            color: #D6C6B0;
            padding: 20px;
            text-align: center;
            font-size: 12px;
        }
        .button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #2C5234;
            color: #D6C6B0;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Summit Ridge HOA</h1>
        </div>
        <div class="content">
            {{{body}}}
        </div>
        <div class="footer">
            <p>Summit Ridge HOA</p>
            <p>This email was sent according to your notification preferences.</p>
            <p><a href="{{preferencesUrl}}">Manage Email Preferences</a></p>
        </div>
    </div>
</body>
</html>